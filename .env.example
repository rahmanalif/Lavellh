# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/lavellh
# or for MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/your-database-name

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=7d

# JWT Access & Refresh Token Configuration (New - Recommended)
# Access token: Short-lived token for API requests (default: 15 minutes)
JWT_ACCESS_EXPIRES_IN=15m
# Refresh token: Long-lived token to get new access tokens (default: 7 days)
JWT_REFRESH_EXPIRES_IN=7d
# Refresh token secret (optional, uses JWT_SECRET if not provided)
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_different_from_jwt_secret

# Server Configuration
PORT=5100
NODE_ENV=development
APP_NAME=Lavellh

# Email Configuration (SMTP)
# For Gmail: Enable 2FA and create an App Password
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Twilio Configuration (SMS)
# Get these from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Cloudinary Configuration (Image Upload)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
